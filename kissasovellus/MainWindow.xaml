        xmlns:local="clr-namespace:kissasovellus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Valitse kissa" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" Height="102" Width="371" Click="Button_Click" FontFamily="Bauhaus 93" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Margin="454,0,0,0" TextWrapping="Wrap" Name ="kissaLista" Text="kissaLista" VerticalAlignment="Center" Width="223" Height="249" FontSize="16">
